extends ../base
include ../mixins/videos

block content 
    h1 Watch Recode
    if videos
        each video in videos
            - let user = userId
            - let id = video._id
            - let thumbnail = video.thumbnail
            form(method="POST", class="form")
                if !video.delete
                    a(href=`/videos/watch/${id}`)
                        img(src=`/upload/thumbnail/${thumbnail}`)
                        br
                        span=video.title
                    +video(video) 
                    button(class="button") X
                    input(type="hidden", name="id", value=`${id}`, class="recodeVideoId")
                    p
                else
                    form(method="POST", class="form")
                        img(src="data:image/jpeg;base64,")
                        span deleted
                        button(class="button") X
                        input(type="hidden", name="id", value=`${id}`, class="recodeVideoId")
                        p
    block scripts 
        script(src="/scripts/deleteVideo.js") 