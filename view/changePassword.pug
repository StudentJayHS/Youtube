extends base

block content 
    if error 
        span=error
    if !user.login
        form(method="POST")
            span 비밀번호 변경 
            input(type="password", placeholder="write your change password", required, name="changePassword")
            p 
            span 비밀번호 재입력 
            input(type="password", placeholder="write your change password again", required, name="changePassword_2")
            p 
            button 확인
            p
            a(href="/users/login") 로그인 화면으로
            br
            a(href="/") 홈 화면으로
    else 
        form(method="POST")
            input(type="hidden", value=true, name="profile")
            span 현재 비밀번호 
            input(type="password", placeholder="write your now password", required, name="nowPassword")
            p 
            span 비밀번호 변경 
            input(type="password", placeholder="write your change password", required, name="changePassword")
            p 
            span 비밀번호 재입력 
            input(type="password", placeholder="write your change password again", required, name="changePassword_2")
            p 
            button 확인
            p
            a(href="/users/profile") 프로필 화면으로